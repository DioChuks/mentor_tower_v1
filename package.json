{
  "name": "mentor-tower-backend",
  "version": "0.1.0",
  "description": "Backend services for Mentor Tower",
  "main": "./dist",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "NODE_OPTIONS=--max_old_space_size=4096 npm run clean && npx tsc",
    "start": "node dist/index.js",
    "dev": "nodemon api/index.ts",
    "watch": "ts-node-dev --files --respawn --inspect -r tsconfig-paths/register ./api",
    "cluster": "pm2 start api/index.ts -i max",
    "test": "jest --forceExit --detectOpenHandles",
    "add-build": "git add dist",
    "prettier": "prettier \"**/*.+(js|jsx|json|css|md)\"",
    "prettier:write": "prettier --write \"**/*.+(js|jsx|json|css|md)\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DioChuks/mentor-tower.git"
  },
  "keywords": [
    "Mentor",
    "Mentor Tower",
    "Schedules"
  ],
  "author": "Dio Chuks Liam",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DioChuks/mentor-tower/issues"
  },
  "homepage": "https://github.com/DioChuks/mentor-tower#readme",
  "dependencies": {
    "axios": "^1.6.8",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "email-templates": "^11.1.1",
    "express": "^4.18.3",
    "express-rate-limit": "^7.3.1",
    "googleapis": "^140.0.1",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongoose": "^8.2.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.13",
    "nodemon": "^3.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pm2": "^5.3.1",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^9.0.1",
    "validator": "^13.12.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.6",
    "@babel/preset-typescript": "^7.24.6",
    "@jest/globals": "^29.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/email-templates": "^10.0.4",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.25",
    "@types/nodemailer": "^6.4.15",
    "@types/passport-jwt": "^4.0.1",
    "@types/uuid": "^9.0.8",
    "@types/validator": "^13.12.0",
    "cors": "^2.8.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.3.0",
    "prettier": "^3.3.2",
    "supertest": "^6.3.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.5.3"
  }
}
