{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleDetection": "force",
    "baseUrl": "./api",
    "rootDir": "./api",
    "outDir": "./dist",
    "lib": ["ES2020"],
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules"]
}